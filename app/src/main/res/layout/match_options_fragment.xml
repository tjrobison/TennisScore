<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >

    <TextView android:id="@+id/edit_p1_name_label"
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:text="@string/p1_name"
        android:layout_gravity="left|center"
        android:editable="true"
              android:layout_marginTop="16dp"
              android:layout_marginLeft="24dp"/>

    <EditText android:id="@+id/edit_p1_name_field"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
              android:layout_marginLeft="24dp"
              android:layout_marginRight="32dp"/>

    <TextView android:id="@+id/edit_p2_name_label"
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:text="@string/p2_name"
        android:layout_gravity="left|center"
        android:editable="true"
              android:layout_marginTop="16dp"
              android:layout_marginLeft="24dp"/>

    <EditText android:id="@+id/edit_p2_name_field"
        android:layout_width="match_parent"
        android:layout_height="38dp"
              android:layout_marginLeft="24dp"
              android:layout_marginRight="32dp"
              android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView android:id="@+id/edit_set_points_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points To Win Set:"
            android:layout_marginLeft="24dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <EditText android:id="@+id/edit_set_points_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="64dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="36dp"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/match_options_done_button"
        android:layout_gravity="center" />

</LinearLayout>