<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".ScoreActivity">

    <TableLayout
        android:id="@+id/score_table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:background="@color/table_background"
        >
        <TableRow>
            <TextView android:id="@+id/p1_name"
                      android:clickable="true"
                      android:text="@string/p1_score"
                      android:background="@color/table_foreground_dark"
                      android:layout_weight="1.5"
                      android:padding="16dip"
                    android:layout_width="0dp"
                />
            <TextView android:id="@+id/p1_s1_score"
                      android:text="@string/p1_s1_score"
                      android:background="@color/table_foreground"
                      android:layout_weight="1"
                      android:padding="16dip"
                android:layout_width="0dp"
                android:layout_marginLeft="2dp" />
            <TextView android:id="@+id/p1_s2_score"
                      android:text="@string/p1_s2_score"
                      android:background="@color/table_foreground"
                      android:layout_weight="1"
                      android:padding="16dip"
                android:layout_width="0dp"
                android:layout_marginLeft="2dp"
                />
            <TextView android:id="@+id/p1_s3_score"
                      android:text="@string/p1_s3_score"
                      android:background="@color/table_foreground"
                      android:layout_weight="1"
                      android:padding="16dip"
                android:layout_width="0dp"
                android:layout_marginLeft="2dp"
                />
            <TextView android:id="@+id/p1_game_score"
                      android:text="@string/p1_game_score"
                      android:background="@color/table_foreground_dark"
                      android:layout_weight="1.3"
                      android:padding="16dip"
                android:layout_width="0dp"
                android:layout_marginLeft="2dp"
                />

        </TableRow>

        <TableRow>
            <TextView android:id="@+id/player_names_label"
                      android:text=""
                      android:layout_weight="1.6"
                      android:padding="16dip"
                android:layout_width="0dp"
                />
            <TextView android:id="@+id/set_1_label"
                      android:text="@string/set_1_label"
                      android:layout_weight="1"
                      android:padding="16dip"
                android:layout_width="0dp"
                />
            <TextView android:id="@+id/set_2_label"
                      android:text="@string/set_2_label"
                      android:layout_weight="1"
                      android:padding="16dip"
                android:layout_width="0dp"
                />
            <TextView android:id="@+id/set_3_label"
                      android:text="@string/set_3_label"
                      android:layout_weight="1"
                      android:padding="16dip"
                android:layout_width="0dp"
                />
            <TextView android:id="@+id/game_score_label"
                      android:text="@string/game_score_label"
                      android:layout_weight="1.1"
                      android:padding="16dip"
                android:layout_width="0dp"
                />
        </TableRow>

        <TableRow>
            <TextView android:id="@+id/p2_name"
                      android:clickable="true"
                      android:text="@string/p2_score"
                      android:background="@color/table_foreground_dark"
                      android:layout_weight="1.5"
                      android:padding="16dip"
                    android:layout_width="0dp"
                />
            <TextView android:id="@+id/p2_s1_score"
                      android:text="@string/p2_s1_score"
                      android:background="@color/table_foreground"
                      android:layout_weight="1"
                      android:padding="16dip"
                android:layout_width="0dp"
                android:layout_marginLeft="2dp"
                />
            <TextView android:id="@+id/p2_s2_score"
                      android:text="@string/p2_s2_score"
                      android:background="@color/table_foreground"
                      android:layout_weight="1"
                      android:padding="16dip"
                android:layout_width="0dp"
                android:layout_marginLeft="2dp"
                />
            <TextView android:id="@+id/p2_s3_score"
                      android:text="@string/p2_s3_score"
                      android:background="@color/table_foreground"
                      android:layout_weight="1"
                      android:padding="16dip"
                android:layout_width="0dp"
                android:layout_marginLeft="2dp"
                />
            <TextView android:id="@+id/p2_game_score"
                      android:text="@string/p1_game_score"
                      android:background="@color/table_foreground_dark"
                      android:layout_weight="1.3"
                      android:padding="16dip"
                android:layout_width="0dp"
                android:layout_marginLeft="2dp"
                />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/table_background"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_button_label"
            android:id="@+id/reset_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_save_button_label"
            android:id="@+id/reset_save_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</LinearLayout>
